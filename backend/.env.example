# HubSpot AI Wrapper - Backend environment variables
# Copy to .env and set values (do not commit .env)

# HubSpot
HUBSPOT_API_KEY=your-hubspot-private-app-access-token

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# LLM (use one)
OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Database (optional; Supabase provides connection string)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# CORS (comma-separated origins; Vercel frontend + local)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# App
FRONTEND_URL=http://localhost:3000
