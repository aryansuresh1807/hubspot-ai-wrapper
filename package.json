{
  "name": "hubspot-ai-wrapper",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack HubSpot AI Wrapper - Next.js frontend, FastAPI backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && uvicorn app.main:app --reload",
    "build": "npm run build --workspace=frontend",
    "install:all": "npm install && npm install --workspace=frontend",
    "lint": "npm run lint --workspace=frontend"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
